---
import BaseLayout from '../layouts/BaseLayout.astro';
import linksData from '../data/links.json';
---

<BaseLayout
  title="Links"
  description="Find me elsewhere on the web â€” social profiles, music, and more."
>
  <h1>Links</h1>
  <p class="lead" style="margin-bottom: var(--space-2xl);">
    Find me elsewhere on the web.
  </p>

  <ul class="links-list" role="list">
    {linksData.map((link) => (
      <li class="links-item">
        <a href={link.url} class="links-link" target="_blank" rel="noopener noreferrer">
          <span class="links-label">{link.label}</span>
          <span class="links-arrow">&nearr;</span>
        </a>
        <p class="links-description">{link.description}</p>
      </li>
    ))}
  </ul>
</BaseLayout>

<style>
  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .links-item {
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--color-border);
  }

  .links-item:first-child {
    padding-top: 0;
  }

  .links-item:last-child {
    border-bottom: none;
  }

  .links-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: 500;
    color: var(--color-text);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .links-link:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .links-arrow {
    font-size: var(--text-sm);
    opacity: 0.5;
    transition: opacity 0.15s ease;
  }

  .links-link:hover .links-arrow {
    opacity: 1;
  }

  .links-description {
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-xs);
  }
</style>
